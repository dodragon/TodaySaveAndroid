<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TodaySave.Starting" parent="Theme.SplashScreen">
        <!-- 스플래시 화면의 배경색 -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- 스플래시 화면 중앙에 표시될 아이콘 (Drawable) -->
        <!-- 벡터, PNG, 애니메이션(AVD) 등 모두 가능 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_test</item>

        <!-- 하단에 표시될 브랜딩 이미지 (잘리지 않음) -->
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_logo_test</item>

        <!-- (선택사항) 아이콘 애니메이션의 길이. AnimatedVectorDrawable(AVD)을 사용할 때만 의미가 있습니다. -->
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <!-- 2. 스플래시 화면이 끝난 후 적용될 실제 앱 테마 지정 (매우 중요!) -->
        <item name="postSplashScreenTheme">@style/Theme.TodaySave</item>
    </style>
</resources>